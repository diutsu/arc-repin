{
  "manifest_version": 3,
  "name": "ARC RePin â€” Auto-RePin Chrome",
  "version": "1.0",
    "description": "Auto-RePin Chrome tabs in Arc-style: persistent pinned tabs, auto-restore, and layout syncing.",
    "background": {
    "service_worker": "background/worker.js"
  },
  "permissions": [
    "storage",
    "tabs",
    "contextMenus",
    "scripting"
  ],
  "icons":{
    "16": "icons/icon-16.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },
  "action": {
    "default_icon": {
      "16": "icons/icon-16.png",
      "48": "icons/icon-48.png",
      "128": "icons/icon-128.png"
    },
    "default_title": "Toggle Pin"
  },
  "options_page": "options/index.html",
  "commands": {
    "apply-stored-pinned-to-current-window": {
      "suggested_key": {
        "default": "Ctrl+Shift+P"
      },
      "description": "Apply stored pinned tabs to the current window"
    }
  },
  "content_scripts": [
  {
    "matches": ["<all_urls>"],
    "js": ["background/toast.js"],
    "run_at": "document_idle"
  }
]
}
